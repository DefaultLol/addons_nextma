<?xml version="1.0" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="product_template_manufacturer_form_view">
            <field name="name">product.product_template_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='purchase_ok']" position="after">
                    <div>
                            <field name="dm_ok"/>
                            <label for="dm_ok"/>
                    </div>      
                </xpath>
                <notebook>
                <page string="Dispositifs Medicaux" name="extra" attrs="{'invisible':[('dm_ok', '=', False)]}">
                
                    <group name="manufacturer" string="Dispositifs Medicaux" attrs="{'invisible':[('dm_ok', '=', False)]}">

                  
                     <group>
                        
                        <field name="ampdm_gmdn"/>
                        <field name="ampdm_hscode"/>
                        <field name="cedm_num" attrs="{'required':[('dm_ok','=', True)]}"/>
                        <field name="cedm_date_deb" />
                        <field name="cedm_date_fin" />

                    </group>

                    <group>

                        <field name="code_anam" />
                        <field name="anam_tarif" />
                        <field name="classif" attrs="{'required':[('dm_ok','=', True)]}"/>
                        <field name="achat_import"/>
                        <field name="achat_locaux"/>

                    </group>   

                    </group> 
                    
                </page>
            </notebook>
            </field>
        </record>

    </data>
</odoo>
